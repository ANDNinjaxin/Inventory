<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/faketoolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_xxlarge">

        <TextView
            android:id="@+id/toolbarmenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/menu_title"
            android:paddingLeft="@dimen/margin_small"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="TESTING MENU"/>
        
        <View
            android:id="@+id/toolbarmenuborder"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RLdashboard"
        android:layout_below="@id/faketoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lvdashboarduser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/lvdashboardadmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/base_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/faketoolbar">

    </FrameLayout>

</RelativeLayout>
