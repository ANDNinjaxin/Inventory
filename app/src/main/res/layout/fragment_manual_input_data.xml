<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/RL_fake_tab_bar_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LL_container"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <Button
                style="@style/buttonbarbutton"
                android:id="@+id/fake_tab_1"
                android:layout_height="45dp"
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="@string/student"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <Button
                style="@style/buttonbarbutton"
                android:id="@+id/fake_tab_2"
                android:layout_height="45dp"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="@string/book"
                android:textAllCaps="true"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:id="@+id/fake_indicator"
            android:layout_width="123dp"
            android:layout_height="2dp"
            android:layout_marginBottom="1dp"
            android:background="@color/black" />

        <View
            android:id="@+id/tab_bar_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/kumon" />

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_below="@+id/RL_fake_tab_bar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</RelativeLayout>